{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck":true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "types": ["reflect-metadata", "mocha", "chai"],
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@controllers/*": ["./src/controllers"],
      "@service/*": ["./src/service"],
      "@utils/*": ["./src/utils"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": ["src/**/*", "test/**/*"]
}
